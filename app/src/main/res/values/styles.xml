<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.DayNight">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorOnPrimary">@color/colorPrimaryText</item>
        <item name="colorSecondary">@color/colorAccent</item>
        <item name="colorOnSecondary">@color/colorAccentText</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AnimeCell">
        <item name="android:padding">20dp</item>
    </style>

    <style name="AnimeCellTitle">
        <item name="android:textColor">@color/colorMainText</item>
        <item name="android:textSize">15sp</item>
        <item name="android:paddingHorizontal">8dp</item>
        <item name="android:paddingTop">8dp</item>
    </style>

    <style name="BottomBar">
        <item name="android:layout_height">?attr/actionBarSize</item>
        <item name="android:background">?attr/colorPrimary</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:paddingHorizontal">15dp</item>
    </style>

    <style name="AnimeFile">
        <item name="android:background">@drawable/anime_file_bg</item>
    </style>

    <style name="AnimeFileDivider">
        <item name="android:background">@color/colorMainText</item>
        <item name="android:layout_height">1px</item>

    </style>

    <style name="AnimeFileTitle">
        <item name="android:textColor">@color/colorMainText</item>
        <item name="android:textSize">15sp</item>
        <item name="android:paddingVertical">10dp</item>
        <item name="android:paddingHorizontal">20dp</item>
    </style>

    <style name="DrivesButtonPanel">
        <item name="android:paddingHorizontal">10dp</item>
    </style>

    <style name="DrivesTextInput">
        <item name="android:layout_marginHorizontal">10dp</item>
        <item name="android:layout_marginVertical">5dp</item>
    </style>
</resources>
